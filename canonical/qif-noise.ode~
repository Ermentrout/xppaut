# qif-noise.ode
# noisy qif that keeps track of spike times and ISI
@ meth=euler,bound=100000000
wiener w
par sig=.1
par i=.1
par vhit=20,vreset=-5
par maxcount=1000
v'=v^2+i + sig * w
isi'=0
count'=0
tlast'=0
global 1 v-vhit {v=vreset;isi=t-tlast;tlast=t;count=count+1;out_put=1;arret=(count>=maxcount)
@ total=5000,trans=50000
done

